{
    "compilerOptions": {
        "target": "es2020",
        "module": "commonjs",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "./dist",
        "paths": {
            "@/*": ["./src/*"],
            "controllers/*": ["./src/controllers/*"],
            "services/*": ["./src/services/*"],
            "repositories/*": ["./src/repositories/*"]
        }
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules"]
}
